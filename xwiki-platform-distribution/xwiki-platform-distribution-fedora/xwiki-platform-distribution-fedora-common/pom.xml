<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki-platform-distribution-fedora</artifactId>
    <version>9.9-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-platform-distribution-fedora-common</artifactId>
  <packaging>rpm</packaging>
  <name>XWiki Platform - Distribution - Fedora - Common</name>
  <description>XWiki common package</description>
  <properties>
    <!-- Put the name of the distribution which will be displayed in the footer -->
    <xwiki.extension.name>XWiki Fedora</xwiki.extension.name>

    <war.path>${project.build.directory}/war</war.path>

    <xwiki.properties.environment.permanentDirectory>/var/lib/xwiki/data</xwiki.properties.environment.permanentDirectory>

    <xwiki.extension.features>xwiki</xwiki.extension.features>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-distribution-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <!-- Generate extension descriptor -->
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-extension-plugin</artifactId>
        <executions>
          <execution>
            <id>register</id>
            <goals>
              <goal>register</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Unpack the war -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unzip-application</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.xwiki.platform</groupId>
                  <artifactId>xwiki-platform-distribution-war</artifactId>
                  <version>${project.version}</version>
                  <type>war</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${war.path}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Prepare configuration -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-remote-resources-plugin</artifactId>
      </plugin>

      <!-- Build the RPM package -->
      <plugin>
        <artifactId>rpm-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
        <configuration>
          <defaultDirmode>644</defaultDirmode>
          <defaultFilemode>644</defaultFilemode>
          <mappings>
            <mapping>
              <directory>/usr/lib/xwiki</directory>
              <sources>
                <source>
                  <location>${war.path}</location>
                  <excludes>
                    <exclude>WEB-INF</exclude>
                    <exclude>WEB-INF/**/*</exclude>
                    <exclude>META-INF/extension.xed</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/lib/xwiki/WEB-INF/lib</directory>
              <sources>
                <source>
                  <location>${war.path}/WEB-INF/lib</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/lib/xwiki/META-INF</directory>
              <sources>
                <source>
                  <location>${project.build.outputDirectory}/META-INF</location>
                </source>
              </sources>
            </mapping>

            <!-- Configuration files -->
            <mapping>
              <directory>/etc/xwiki</directory>
              <configuration>true</configuration>
              <sources>
                <source>
                  <location>${war.path}/WEB-INF</location>
                  <excludes>
                    <exclude>**/lib</exclude>
                    <exclude>**/lib/*</exclude>
                    <exclude>**/hibernate.cfg.xml</exclude>
                    <exclude>**/web.xml</exclude>
                    <exclude>**/xwiki.cfg</exclude>
                    <exclude>**/xwiki.properties</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>

            <!-- Default configuration files -->
            <mapping>
              <directory>/usr/share/xwiki/default</directory>
              <sources>
                <source>
                  <location>${war.path}/WEB-INF</location>
                  <includes>
                    <include>web.xml</include>
                  </includes>
                </source>
                <source>
                  <location>${project.build.directory}/maven-shared-archive-resources</location>
                  <includes>
                    <include>xwiki.cfg</include>
                    <include>xwiki.properties</include>
                  </includes>
                </source>
              </sources>
            </mapping>

            <!-- Links to /usr/lib/xwiki/WEB-INF files/folders -->
            <mapping>
              <directory>/etc/xwiki</directory>
              <sources>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/cache</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/classes</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/fonts</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/observation</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/hibernate.cfg.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/jboss-deployment-structure.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/portlet.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/struts-config.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/sun-web.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/version.properties</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/web.xml</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/xwiki.cfg</location>
                </softlinkSource>
                <softlinkSource>
                  <location>/usr/lib/xwiki/WEB-INF/xwiki.properties</location>
                </softlinkSource>
              </sources>
            </mapping>
          </mappings>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>clover</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.xwiki.commons</groupId>
            <artifactId>xwiki-commons-tool-extension-plugin</artifactId>
            <dependencies>
              <dependency>
                <groupId>com.atlassian.clover</groupId>
                <artifactId>clover</artifactId>
                <version>${clover.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>